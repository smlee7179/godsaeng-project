# MongoDB 설정
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=godsaeng

# JWT 설정
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI 설정
# AI 제공자 선택: huggingface (무료), gemini (무료 티어), ollama (로컬, 완전 무료), openai (유료)
AI_PROVIDER=huggingface

# OpenAI API 키 (선택사항 - 유료)
OPENAI_API_KEY=

# Hugging Face API 키 (선택사항 - 무료 티어 있음)
# 발급: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# Google Gemini API 키 (선택사항 - 무료 티어 있음)
# 발급: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Ollama 설정 (로컬 실행, 완전 무료)
# 설치: https://ollama.ai
OLLAMA_URL=http://localhost:11434

# 환경 설정
ENVIRONMENT=development
